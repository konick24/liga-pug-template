      {
        href: "#",
        text: "Дизайн",
        detailList: [
          {
            href: "#",
            text: "3D анимация",
          },
          {
              href: "#",
              text: "3D MAX"
          },
          {
              href: "#",
              text: "3D-моделирование"
          },
          {
              href: "#",
              text: "Adobe After Effects"
          },
          {
              href: "#",
              text: "Adobe Illustrator"
          },
          {
              href: "#",
              text: "Adobe Photoshop"
          },
          {
              href: "#",
              text: "Отрисовка иллюстраций"
          },
        ]
      },
      {
        href: "#",
        text: "Праграммирование",
        detailList: [],
      },
      {
        href: "#",
        text: "Аналитика",
        detailList: [],
