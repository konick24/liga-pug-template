      {
        href: "#",
        text: "Менеджмент",
        detailList: [],
      },
      {
        href: "#",
        text: "Маркетинг",
        detailList: [],
      },
      {
        href: "#",
        text: "Финансы",
        detailList: [],
      },
    ]

  nav.secondary-nav
    .secondary-nav__list
      each list in sacondaryNavList
        .secondary-nav__item.detail
          +btn.detail__button
            span.detail__heading #{list.text}
            +icon("arrow", 10, 10)
          if list.detailList.length > 0
            ul.detail__list
              each detail in list.detailList
                li.ditail__item
                  +btn({text: detail.text, href: detail.href}).detail__link
